{
  "name": "SAMPLE_SHOP",
  "version": "1.0.0",
  "description": "Sample shop",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-files",
    "clean": "rimraf dist/",
    "client-install": "npm install --prefix ../client",
    "copy-files": "copyfiles -u 1 src/**/*.txt dist/",
    "start": "NODE_ENV=production npm run build && node --experimental-vm-modules dist/server.js",
    "start:dev": "npm run build && node --experimental-vm-modules dist/server.js",
    "server": "nodemon",
    "test": "npm run build && NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "client": "npm start --prefix ../client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "yes"
  },
  "author": "Sean D'Souza",
  "dependencies": {
    "acl": "^0.4.11",
    "ajv": "^8.1.0",
    "base64-stream": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-winston": "^4.0.5",
    "glob": "^7.1.6",
    "is-valid-glob": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.7",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.5.0",
    "path-to-regexp": "^6.2.0",
    "paypal-rest-sdk": "^1.8.1",
    "rotating-file-stream": "^2.1.3",
    "stripe": "^7.15.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.4",
    "@types/acl": "^0.4.37",
    "@types/async": "^3.2.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/ejs": "^3.0.6",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.11",
    "copyfiles": "^2.4.1",
    "jest": "^26.6.3",
    "nodemon": "^1.19.4",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  }
}
