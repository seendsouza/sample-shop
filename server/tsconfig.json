{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2020"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "target": "es2020",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*"]
}
